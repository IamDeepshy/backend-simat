generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// table user
model user {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  role        String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt
}

// table task_management
model task_management {
  id          Int      @id @default(autoincrement())
  id_suites   String
  title       String
  assignDev   String
  priority    String
  status      String
  notes       String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt
}

// table suites
model suites {
  id          Int      @id @default(autoincrement())
  name        String
  status      String
  errorMsg    String
  record      String
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt
}

model test_run {
  id          Int      @id @default(autoincrement())
  scope       String
  scopeValue  String
  totalPass   Int
  totalFail   Int
  status      String
  allureUrl   String?
  executedAt  DateTime
  createdAt   DateTime @default(now())

  specs      test_specs[]

  @@unique([scope, scopeValue])
}

model test_specs {
  id            Int       @id @default(autoincrement())
  testCaseId    String    @unique
  suiteName     String
  testName      String
  status        String
  durationMs    Int
  errorMessage String? @db.Text
  screenshotUrl String?
  lastRunAt     DateTime
  runId         Int

  run           test_run  @relation(fields: [runId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
